<div class="container">
  <div class="row mt-4">
    <div class="col">
     <h3>商品詳細</h3>
     <div class="row">
      <div class="col-md-5">
        <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg',fallback: "no-image-icon.jpg",size: '300x300'%>
      </div>
      <div class="col-md-7">
        <table class="table table-borderless">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税抜価格<br>
            （税込価格）</td>
            <td><%= @item.price %>(<%=@item.add_tax_price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_active %></td>
          </tr>
        </table>
        <%= form_with model:@item,url:'cart_items',method: :post, local: true do |f| %>
          <%= f.select :item, [["１", "１"], ["２", "２"] , ["3", "3"], ["4", "4"], ["5", "5"], ["6", "6"], ["7", "7"], ["8", "8"], ["9", "9"]], class:"form-control" %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
        
      </div>
     </div>
    </div>
  </div>
</div>