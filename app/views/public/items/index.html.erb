 <div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-1">
    <h2>商品一覧</h2>
      <table>
        <tr>
        <% @items.each do |item| %>
           <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg',fallback: "no-image-icon.jpg",size: '100x100'%>
              <%= item.name %>
            <% end %>
              ¥<%= item.add_tax_price.to_s(:delimited) %>
        <% end %>
        </tr>
      </table>
   </div>
  </div>
 </div>