<div class="container">
  <div class="row mt-4 mx-auto">
    <div class="col-2 mr-3">
     <h3>配送先編集</h3>
    </div>
    <%= form_with model:@address, local: true do |f| %>
     <div class="row">
      <div class="col-12 pt-3 pb-3 bg-transparent">
      <h4>郵便番号（ハイフンなし）</h4>
      <div class="form-group">
       <%= f.text_field :postal_code, class: "col-md-4 form-control" %>
      </div>
      <h4>住所</h4>
      <div class="form-group">
       <%= f.text_field :address,class: "form-control", size: 50 %>
      </div>
      <h4>宛名</h4>
      <div class="form-group">
       <%= f.text_field :name, class: "form-control" %>
      </div>
      <%= f.submit '変更内容を保存',class: 'btn btn-light btn-outline-dark' %>
     </div>
  </div>
</div>
  <% end %>