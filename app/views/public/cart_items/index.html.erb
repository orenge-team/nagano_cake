<h1>Public::CartItems#index</h1>
<% @cart_items.each do |item| %>
  <tr>
    <td><%= item.image_id %></td>
    <td><%= item.name %></td>
    <td><%= item.count %></td>
    <td><%= item.price %></td>
    <td><%= link_to "編集する", edit_address_path(address), class: 'btn btn-success' %></td>
    <td><%= link_to "削除する",address_path(address), class: 'btn btn-danger',  method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
<% end %>