<div class="container">
  <div class="row mt-3">
   <div class="col-lg-2">
     <%= render"public/items/genre_search", genre: @genre %>
     </div>
     <div class="col-lg-10">
    <h2>商品一覧(検索)</h2>
      <table>
        <tr>
         <div class="row">
           <% if @range == "Item" %>

            <% @items.each do |item| %>
               <div class="col-12, m-3">
       <%= link_to item_path(item.id) do %>
       <%= attachment_image_tag item, :image, :fill, 200, 150, format: 'jpeg',fallback: "no-image-icon.jpg",size: '200x150'%><br>
       <%= item.name %><br>
       <% end %>
     ¥<%= item.add_tax_price.to_s(:delimited) %><br>
   
    </div>
            <% end %>
           <% end %>
          </div>
        </div>

        </tr>
      </table>
   </div>
  </div>
 </div>