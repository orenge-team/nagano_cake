
<h1>注文情報確認画面</h1>

<div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class="col-md-8 offset-md-1">
        <table class = "table table-hover table-inverse table-bordered" >
          <thead>
            <tr>
              <th></th>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_items| %>
            <tr>
              <td><%= attachment_image_tag cart_items.item, :image, :fill, 50, 50, fallback: "no-image-icon.jpg" %></td>
              <td><%= cart_items.item.name %></td>
              <td>¥<%= (cart_items.item.price).to_s(:delimited) %></td>
              <td><%= cart_items.count %></td>
              <td>¥<%= (cart_items.item.price*cart_items.count).to_s(:delimited) %></td>
            </tr>
              <% end %>
          </tbody>
        </table>

        <table class="table table-hover table-inverse">
          <thread>
            <tr>
              <th></th>
              <th></th>
            </tr>
          </thread>
          <tbody>
            <tr>
              <td>送料</td>
              <td>¥<%= @delivery_fee.to_s %></td>
            </tr>
            <tr>
              <td>商品合計</td>
              <td>¥<%= @total.round.to_s(:delimited) %></td>
            </tr>
            <tr>
              <td>請求金額</td>
              <td>¥<%= @delivery_fee+@total %></td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <td>お届け先</td>
              <td>〒<%= @order.postal_code %>
                    <%= @order.address %>
                    <%= @order.name %>
              </td>
            </tr>

          </tbody>
        </table>
    <div>
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :total_price, value: @total %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :delivery_fee %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
</div>
</div>