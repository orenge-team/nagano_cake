<dev class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="row">
        <div class="ml-5"><h2>注文履歴一覧</h2></div>
        <div class="col-11 mx-auto pt-3 pb-3 bg-light">
          <table class="table table-hover table-sm">
           <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払い金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
           </thead>
           <tbody>
            <% @orders.each do |order| %>
             <tr>
               <td>
                 <%= order.created_at.strftime('%Y/%m/%d') %>
               </td>
               <td>
                 〒<%= order.postal_code %>
                 <%= order.address %><br>
                 <%= order.name %>
               </td>
               <td>
                 <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %>
                 <% end %>
               </td>
               <td>
                <%= order.total_price.to_s(:delimited, delimiter: ',') %>
               </td>
               <td>
                <%= order.status %>
               </td>
               <td>
                 <%= link_to "表示する",order_path(order), class: "btn btn-outline-dark btn-sm" %>
               </td>
             </tr>
            <% end %>
           </tbody>
         </table>
        </div>
      </div>
    </div>
  </div>
</div>