<div class='container px-5 px-sm-0'>
        <h2>注文履歴詳細</h2>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <p>注文情報</p>
         注文日<%= @order.created_at.strftime('%Y/%m/%d') %>
         配送先<%= @order.address %>
         支払方法<%= @order.payment_method %>
         ステータス<%= @order.status %>

    </div>
      <div class='col-md-3'>
        <p>請求情報</p>
        商品合計<%= @order.total_price %>
        配送料<%= @order.delivery_fee %>
        ご請求額<%= @order.total_price + @order.delivery_fee %>
    </div>
  </div>
    <div class='row'>
      <p>注文内容</p>
      <table class = "table table-hover table-inverse" >
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_items.each do |item| %>
              <tr>
                <td><%= item.item.name %></td>
                <td><%= item.item.add_tax_price %></td>
                <td><%= item.count %></td>
                <td><%= item.count * item.item.add_tax_price %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>

</div>