<dev class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>注文情報入力</h2>
      <%= form_with model:@order,url:'orders_confirm',method: :post, local: true do |f| %>
      <h2>支払い方法</h2>
        <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
        <%= f.label :payment_method, "クレジットカード" %>
        <%= f.radio_button  :payment_method, :"銀行振込" %>
        <%= f.label :payment_method, "銀行振込" %>

        <!--プロパティ、値は適当、アドレスモデルが出来てから訂正-->
        <table>
          <tr>
            <h2>お届け先</h2>
            <th></th>
            <%= f.radio_button :address, :"address", checked: true%>
            <%= f.label :address, "ご自身の住所" %>
            <td>
              <th>〒</th>
              <th><%=@customer.postal_code %></th>
              <th></th>
              <th><%= @customer.address %></th>
            </td>
            <td>
              <%= @customer.first_name %><%= @customer.last_name %>
            </td>
          </tr>
        </table>

        <table>
          <tr>
            <%= f.radio_button :address, :"address" %>
            <%= f.label :address, "登録済み住所から選択" %>
            <%= f.collection_select :addresses_id, Address.all, :id, :address, :include_blank => "送り先を選んでください" %>
          </tr>
        </table>
            <%= f.radio_button :address, :"address" %>
        <%= f.label :address, "新しいお届け先" %>
        <h4>郵便番号（ハイフンなし）</h4>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.text_field :address %>
        <h4>宛名</h4>
        <%= f.text_field :name %>
        <%= f.submit '確認画面へ進む' %>

      <% end %>
    </div>
  </div>
</div>