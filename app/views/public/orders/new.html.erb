<dev class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>注文情報入力</h2>
      <%= form_with model:@order,url:orders_confirm_path, local: true do |f| %>
      <h2>支払い方法</h2>
        <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
        <%= f.label :payment_method, "クレジットカード" %>
        <%= f.radio_button  :payment_method, :"銀行振込" %>
        <%= f.label :payment_method, "銀行振込" %>

        <table>
          <tr>
            <h2>お届け先</h2>
            <th></th>
            <%= f.radio_button :address_number, 1, checked: true%>
            <%= f.label :address_number_1, "ご自身の住所" %><br>
            〒<%= current_customer.postal_code %>
            <%= current_customer.address %><br>
            <%= current_customer.first_name + current_customer.last_name %>
          </tr>
        </table>

        <table>
          <tr>
            <%= f.radio_button :address_number, 2 %>
            <%= f.label :address_number_2, "登録済み住所から選択" %>
            <%= f.collection_select :registered, current_customer.addresses.all, :id,:address, :include_blank => "送り先を選んでください" %>
          </tr>
        </table>
        <%= f.radio_button :address_number, 3 %>
        <%= f.label :address_number_3, "新しいお届け先" %>
        <h4>郵便番号（ハイフンなし）</h4>
        <%= f.label :postal_code, "郵便番号" %>
        <%= f.text_field :postal_code %>
        <h4>住所</h4>
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
        <h4>宛名</h4>
        <%= f.label :address_name, "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit '確認画面へ進む' %>

      <% end %>
    </div>
  </div>
</div>