
<h2>注文情報入力</h2>
<%= form_with model:@order,url:'order_confirm',method: :post, local: true do |f| %>
<h2>支払い方法</h2>
  <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button  :payment_method, :"銀行振込" %>
  <%= f.label :payment_method, "銀行振込" %>
  
  <!--プロパティ、値は適当、アドレスモデルが出来てから訂正-->
  <h2>お届け先</h2>
  <%= f.radio_button :address, :"address", checked: true%>
  <%= f.label :address, "ご自身の住所" %>
  <%= f.radio_button :address, :"address" %>
  <%= f.label :address, "登録済み住所から選択" %>
  <%= f.radio_button :address, :"address" %>
  <%= f.label :address, "新しいお届け先" %>
  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <%= f.submit '確認画面へ進む' %>

<% end %>