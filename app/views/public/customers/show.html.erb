<div class="container">
  <div class="row mt-4 mx-auto">
    <div class="col-2 mr-3">
      <h3>マイページ</h3>
    </div>
    <div class="col-8 pt-3 pb-3 bg-light">
      <h5><strong>登録情報</strong></h5>
      <table class="table">
        <tbody>
          <tr>
            <th>氏名</th>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "配送先一覧", addresses_path, class: "fas fa-truck btn btn-outline-dark mr-2" %>
      <%= link_to "注文履歴一覧", orders_path, class: "fas fa-tags btn btn-outline-dark" %>
      <%= link_to "編集する", edit_customers_path, class: "fas fa-pencil-alt btn btn-outline-dark float-right" %>
    </div>
  </div>
</div>

