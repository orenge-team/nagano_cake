<h3>ジャンル一覧・追加</h3>

<table>
    <tr>
        <td>ジャンル名</td>
        <td><%= form_with model:@genre, url: admin_genres_path, local:true do |f| %></td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit '新規登録' %></td>
        <% end %>
    </tr>

    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>

      <% @genres.each do |genre| %>

    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre)%></td>
    </tr>
    <% end %>



</table>
