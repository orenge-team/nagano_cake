<div class='container'>
  <div class='row mt-4'>
    <div class="col-4 mt-3">
      <h3><span style="margin-left:10px">ジャンル一覧・追加</span></h3>
    </div>
    <div class="col-8 mt-4 pt-3 pb-3 bg-light">
      <div class='row mt-3'>
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          <table>
            <tr>
              <th><span style="margin-left:30px">ジャンル名</span></th>
              <td><span style="margin-left:80px"><%= f.text_field :name, :placeholder => "ジャンル名" %></span></td>
              <td><span style="margin-left:30px"><%= f.submit '新規登録', class: 'far fa-plus-square btn btn-outline-dark' %></span></td>
            </tr>
          </table>
　      <% end %>
　    </div>
　    <div class='row pl-3 pr-3'>
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <td><span style="margin-left:150px"><%= link_to '編集する', edit_admin_genre_path(genre), class: "fas fa-pencil-alt btn btn-sm"%></span></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
