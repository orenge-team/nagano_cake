<div class='container'>
  <div class='row mt-4'>
  <h3><span style="margin-left:100px">ジャンル一覧・追加</span></h3>
  </div>
  <div class='row mt-4'>
    <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
    <table>
      <tr>
        <td><span style="margin-left:30px">ジャンル名</span></td>
        <td><span style="margin-left:80px"><%= f.text_field :name, :placeholder => "ジャンル名" %></span></td>
        <td><span style="margin-left:80px"><%= f.submit '新規登録', class: 'btn btn-success' %></span></td>
      </tr>
    </table>
　  <% end %>
　</div>
　
　<div class='row mt-2'>
　  <div class="col-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        
      <% @genres.each do |genre| %>

        <tr>
          <td><%= genre.name %></td>
          <td><span style="margin-left:150px"><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success"%></span></td>
        </tr>
     <% end %>
     </table>
  </div>
</div>  
