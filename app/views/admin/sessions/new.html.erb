<div class="container">
  <div class="row mt-4">
    <h3>管理者ログイン</h3>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inline form-group row mt-5">
    <%= f.label :"メールアドレス", class: "col-4 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"col-sm-8 form-control", :placeholder =>"sample@example.com"%>
    </div>

    <div class="form-inline form-group row mt-3">
    <%= f.label :"パスワード", class:"col-4 control-label" %>
    <%= f.password_field :password, autocomplete: "current-password" , class:"col-8 form-control" %>
    </div>


    <div class="form-inline form-group row mt-3">
    <%= f.label :" ", class:"col-3" %>
    <%= f.submit "ログイン", class:"btn btn-primary col-2" %>
    </div>
    <% end %>
    </div>
  </div>
</div>