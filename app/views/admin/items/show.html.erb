<h3>商品詳細</h3>
<div class="container">
  <div class="row">
    
    <div class="col-lg-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
    </div>
    
    <div class="col-lg-8">
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @genre %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @item.price%></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売休止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>  