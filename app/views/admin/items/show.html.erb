<h3>商品詳細</h3>
<div class="container">
  <div class="row">

    <div class="col-md-5">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg',fallback: "no-image-icon.jpg",size: '300x300'%>
    </div>

    <div class="col-md-7">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税抜価格<br>
          （税込価格）</td>
          <td><%= @item.price %>(<%=@item.add_tax_price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active %></td>
        </tr>
      </table>
      
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
    
  </div>
</div>