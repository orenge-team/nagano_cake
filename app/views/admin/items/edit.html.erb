<div class='container'>
  <div class='row mt-4'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h4>商品編集</h4>
     <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
      <div class="form-group row mt-5">
        <div class="col-4"><%= f.label :image, "商品画像" %></div>
        <div class="col-8">
          <%= f.attachment_field :image %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"><%= f.label :name, "商品名" %></div>
        <div class="col-8">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"><%= f.label :introduction, "商品説明" %></div>
        <div class="col-8">
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"><%= f.label :genre_id, "ジャンル" %></div>
        <div class="col-8">
          <%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "--選択してください--"} )%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"><%= f.label :price, "税抜価格" %></div>
        <div class="col-8">
          <%= f.text_field :price, class: 'form-control' %>円
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"><%= f.label :is_active, "販売ステータス" %></div>
        <div class="col-8">
          <%= f.radio_button :is_active, :"販売中" %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :"販売休止中" %>
          <%= f.label :is_active, "販売休止中" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-4"></div>
        <div class="col-8"><%= f.submit '変更を保存', class: 'btn btn-success' %></div>
      </div>
     <% end %>
   </div>
  </div>
</div>
