<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h4>商品新規登録</h4>
     <%= form_with model:item, url: admin_items_path, local:true do |f| %>
      <div class="row">
        <div class="control-label col-3">商品画像</div>
        <div class="col-8">
          <%= f.attachment_field :image %>
        </div>
      </div>

      <div class="row">
        <div class="control-label col-2">商品名</div>
        <div class="col-8">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.collection_select(:genre_id, genres, :id, :name, {prompt: "--選択してください--"} )%>
      </div>

      <div class="form-group">
         <%= f.label :price, "税抜価格" %>
         <%= f.text_field :price, class: 'form-control' %>円
      </div>

      <div class="form-group">
         <%= f.label :is_active, "販売ステータス" %>
         <%= f.radio_button :is_active, :"販売中", checked: true %>
         <%= f.label :is_active, "販売中" %>
         <%= f.radio_button :is_active, :"販売休止中" %>
         <%= f.label :is_active, "販売休止中" %>
      </div>

      <div class="form-group">
         <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
     <% end %>
   </div>
 </div>
</div>