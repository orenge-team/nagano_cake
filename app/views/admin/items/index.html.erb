<div class='container'>
  <div class='row mt-4'>
    <div class="col-12 mx-auto">
    <h3 class="items_index">商品一覧</h3>
    <%= link_to new_admin_item_path do %>
     <i class="far fa-plus-square fa-2x "></i>
    <% end %>
    <table class="table mt-4">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <% @items.each do |item| %>

        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admin_item_path(item) do %>
               <div class="text-dark"><%= item.name %></div>
              <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
      <% end %>
    </table>
    <%= paginate @items %>
  </div>
 </div>
</div>

