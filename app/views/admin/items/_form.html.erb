 <h4>商品新規登録</h4>
 <%= form_with model:item, url: admin_items_path, local:true do |f| %>
   <div class="form-group">
     <%= f.label :image_id, "商品画像" %>
     <%= f.attachment_field :image %>
   </div>

   <div class="form-group">
     <%= f.label :name, "商品名" %>
     <%= f.text_field :name, :placeholder => "商品名", class: 'form-control' %>
   </div>

   <div class="form-group">
     <%= f.label :introduction, "商品説明" %>
     <%= f.text_area :introduction, class: 'form-control' %>
   </div>

   <div class="form-group">
     <%= f.label :genre_id, "ジャンル" %>
     <%= f.collection_select(:genre_id, genres, :id, :name, {prompt: "--選択してください--"} )%>
   </div>

   <div class="form-group">
      <%= f.label :price, "税抜価格" %>
      <%= f.text_field :price, class: 'form-control' %>
   </div>

   <div class="form-group">
      <%= f.radio_button :is_active, :"販売中", checked: true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, :"販売休止中" %>
      <%= f.label :is_active, "販売休止中" %>
   </div>

   <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
   </div>

<% end %>