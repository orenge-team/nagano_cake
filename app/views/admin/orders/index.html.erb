<div class='container'>
  <div class='row mt-4'>
    <div class="col-12 mx-auto">
      <div class="row">
        <div class="col-11"><h3 class="items_index">注文履歴一覧</h3></div>
        </div>
      </div>
     <table class="table table-hover mt-4">
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to admin_order_path(order) do %>
               <div class="text-dark"><%= order.updated_at.strftime('%Y/%m/%d')%></div>
              <% end %>
            </td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_items.count %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
     </table>
    <!--<= paginate @items %>-->
  </div>
 </div>
</div>