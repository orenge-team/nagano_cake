<div class='container'>
  <div class='row mt-4'>
    <div class="col-12 mx-auto">
    <h3 class="items_index">会員一覧</h3>
    <table class="table mt-4">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
            <div class="text-dark"><%= @customer.first_name %><%= @customer.last_name %></div>
            <% end %>
          </td>
          <td><%= customers.email %></td>
          <td><%= customer.is_deleted %></td>
        </tr>
      <% end %>
    </table>
    <!--<= paginate @customers %>-->
  </div>
 </div>
</div>