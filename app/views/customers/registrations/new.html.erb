<section id="sign_up">
<div class="container">
  <div class="row">
    <h2><span style="margin-left:50px">新規会員登録</span></h2>
  </div>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "customers/shared/error_messages", resource: resource %>

   <div class="form-inline form-group col-12">
      <%= f.label :"名前", class: "col-sm-2 control-label" %>
      <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control" ,:placeholder =>"令和"%>
      <%= f.label :"(名)", class: "col-sm-1 control-label" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control" ,:placeholder =>"道子"%>
   </div>
   <div class="form-inline form-group col-12">
      <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
      <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3 form-control",:placeholder =>"レイワ" %>
      <%= f.label :"(名)", class: "col-sm-1 control-label" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3 form-control",:placeholder =>"ミチコ"%>
   </div>
    <div class="form-inline form-group col-12">
      <%= f.label :"メールアドレス", class:"col-3" %>
      <%= f.email_field :email, class:"col-7 form-control ",:placeholder =>"sample@example.com"%>
    </div>

    <div class="form-inline form-group col-12">
      <%= f.label :"郵便番号", class:"col-3" %>
      <%= f.text_field :postal_code, class:"col-3 form-control" ,:placeholder =>"0000000"%>
    </div>

    <div class="form-inline form-group col-12">
      <%= f.label :"住所", class:"col-3 mt-2" %>
      <%= f.text_field :address, class:"col-7 form-control" ,:placeholder =>"東京都渋谷区代々木神園町0-0"%>
    </div>

    <div class="form-inline form-group col-12">
      <%= f.label :"電話番号", class:"col-3 mt-2" %>
      <%= f.telephone_field :phone_number, class:"col-7 form-control" ,:placeholder =>"00000000000"%>
    </div>

     <div class="form-inline form-group col-12">
        <%= f.label :"パスワード（6文字以上）", class:"col-3 mt-2" %>
        <%= f.password_field :password, class:"col-7 form-control", autocomplete: "new-password" %>
     </div>

     <div class="form-inline form-group col-12">
        <%= f.label :"パスワード（確認用）", class:"col-3 mt-2" %>
        <%= f.password_field :password_confirmation, class:"col-7 form-control", autocomplete: "new-password" %>
     </div>

     <div class="orm-inline form-group col-12">
       <%= f.label :" ", class:"col-3" %>
       <%= f.submit "新規登録", class: "fas fa-user-plus btn btn-outline-dark"%>
     </div>

     <div class="row mt-2">
      <h5><span style="margin-left:100px">既に登録済の方</span></h5>
     </div>

      <div class="row">
        <span style="margin-left:150px"><%= link_to "こちら", new_customer_session_path, class: "signin-link" %>    からログインしてください。</span>
      </div>

      <% end %>
</div>