<div class="container top-bg">
  <div class="mt-2">
    <span class="fs-3 fst-italic offset-md-1 bg-light signup-form">新規会員登録</span>
  </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="form-inline">
　　　　　<%= f.label :名前, class:"col-1 mt-2" %>
          （姓）<%= f.text_field :first_name, class:"col-3" %>
          （名）<%= f.text_field :last_name, class:"col-3" %>
        </div>

        <div class="form-inline">
          <%= f.label :フリガナ, class:"offset-1 col-1 mt-1" %>
          （セイ）<%= f.text_field :first_name_kana, class:"col-3" %>
          （メイ）<%= f.text_field :last_name_kana, class:"col-3"  %>
        </div>

        <div class="row mt-3">
          <%= f.label :メールアドレス, class:"offset-1 col-2" %>
          <%= f.email_field :email, class:"col-3"%>
        </div>

        <div class="row mt-3">
          <%= f.label :郵便番号, class:"offset-1 col-2" %>
          <%= f.text_field :postal_code, class:"col-2" %>
        </div>

        <div class="row mt-3">
          <%= f.label :住所, class:"offset-1 col-2" %>
          <%= f.text_field :address, class:"col-6" %>
        </div>

        <div class="row mt-3">
          <%= f.label :電話番号, class:"offset-1 col-2" %>
          <%= f.telephone_field :phone_number, class:"col-2" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード（6文字以上）, class:"col-3" %>
          <%= f.password_field :password, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="row mt-3">
          <%= f.label :パスワード（確認用）, class:"col-3" %>
          <%= f.password_field :password_confirmation, class:"col-2", autocomplete: "new-password" %>
        </div>

        <div class="row mt-3">
          <%= f.submit "新規登録", class:"btn btn-success ml-3" %>
        </div>

        <div class="row mt-1">
          <span class="fs-3 fst-italic offset-md-1 bg-light">既に登録済の方</span>
        </div>

        <div class="row mt-1 mb-4">
          <%= link_to "こちら", new_customer_session_path, class: "signin-link" %>　からログインしてください.
        </div>

      <% end %>



</div>