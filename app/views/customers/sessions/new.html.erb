
<div class="container">
  <div class="row">
    </div class="col">
      <div class="px-3 max-auto">
        <h2 calss="text-center">ログイン</h2>
        <h4 class="text-center">会員の方はこちらからログイン</h4>

          <%#= form_with model: @customers, url: customer_session_path, local: true do |f| %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="text-center">
            <spns>
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </span>
          </div>

          <div class="text-center">
            <spna>
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </span>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="text-center">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="text-center">
            <%= f.submit "ログイン", class: "btn btn-sm btn-success text-white" %>
          </div>
        <% end %>
        <div>
          <h5>会員登録がお済みでない方</h5><br>
          <%= link_to "こちら" %>から新規登録を行ってください
        </div>
      </div>
    </div>
  </div>
</div>

